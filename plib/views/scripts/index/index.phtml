    <!-- Dashboard JavaScript -->
    <script>
        let metricsChart;
        
        function initDashboard() {
            console.log('Initializing dashboard...');
            
            // Wait for DOM if not ready
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', startDashboard);
            } else {
                startDashboard();
            }
        }
        
        function startDashboard() {
            initializeChart();
            loadMetrics();
            startAutoRefresh();
            updateStatusIndicators();
        }

        function initializeChart() {
            const canvas = document.getElementById('metricsChart');
            if (!canvas) {
                console.error('Chart canvas not found');
                return;
            }
            
            if (typeof Chart === 'undefined') {
                console.error('Chart.js not loaded');
                return;
            }
            
            console.log('Creating chart...');
            
            metricsChart = new Chart(canvas.getContext('2d'), {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [
                        {
                            label: 'CPU Usage (%)',
                            data: [],
                            borderColor: 'rgb(255, 99, 132)',
                            backgroundColor: 'rgba(255, 99, 132, 0.1)',
                            tension: 0.4,
                            borderWidth: 2
                        },
                        {
                            label: 'RAM Usage (%)',
                            data: [],
                            borderColor: 'rgb(54, 162, 235)',
                            backgroundColor: 'rgba(54, 162, 235, 0.1)',
                            tension: 0.4,
                            borderWidth: 2
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            ticks: {
                                callback: function(value) {
                                    return value + '%';
                                }
                            }
                        }
                    }
                }
            });
            
            console.log('Chart created successfully');
        }

        function loadMetrics() {
            const baseUrl = '<?php echo pm_Context::getBaseUrl(); ?>';
            const fullUrl = baseUrl + 'index/metrics-json?hours=24';
            
            console.log('Base URL:', baseUrl);
            console.log('Full URL:', fullUrl);
            console.log('Fetching metrics...');
            
            fetch(fullUrl)
                .then(response => {
                    console.log('Response status:', response.status);
                    if (!response.ok) {
                        throw new Error('HTTP ' + response.status);
                    }
                    return response.text();
                })
                .then(text => {
                    console.log('Raw response:', text.substring(0, 200));
                    try {
                        const data = JSON.parse(text);
                        console.log('Parsed data:', data.length, 'records');
                        updateChart(data);
                    } catch (e) {
                        console.error('JSON parse error:', e);
                        console.error('Response was:', text);
                    }
                })
                .catch(error => {
                    console.error('Fetch error:', error);
                });
        }

        function updateChart(metrics) {
            if (!metricsChart) {
                console.warn('Chart not initialized yet');
                return;
            }
            
            if (!metrics || metrics.length === 0) {
                console.warn('No metrics data');
                return;
            }
            
            const labels = [];
            const cpuData = [];
            const ramData = [];
            
            metrics.forEach(metric => {
                const date = new Date(metric.timestamp * 1000);
                labels.push(date.toLocaleTimeString());
                cpuData.push(parseFloat(metric.cpu_usage));
                ramData.push(parseFloat(metric.ram_usage));
            });
            
            metricsChart.data.labels = labels;
            metricsChart.data.datasets[0].data = cpuData;
            metricsChart.data.datasets[1].data = ramData;
            metricsChart.update();
            
            console.log('Chart updated with', metrics.length, 'data points');
        }

        function updateCurrentMetrics() {
            const baseUrl = '<?php echo pm_Context::getBaseUrl(); ?>';
            
            fetch(baseUrl + 'index/current-json')
                .then(response => response.json())
                .then(data => {
                    if (data && data.status !== 'error') {
                        document.getElementById('cpu-value').textContent = data.cpu_usage.toFixed(1) + '%';
                        document.getElementById('ram-value').textContent = data.ram_usage.toFixed(1) + '%';
                        document.getElementById('mysql-value').textContent = data.mysql_connections;
                        
                        updateStatusIndicator('cpu', data.cpu_usage);
                        updateStatusIndicator('ram', data.ram_usage);
                    }
                })
                .catch(error => {
                    console.error('Error updating metrics:', error);
                });
        }

        function updateStatusIndicator(type, value) {
            const statusEl = document.getElementById(type + '-status');
            if (!statusEl) return;
            
            let status = 'normal';
            
            if (type === 'cpu') {
                if (value >= 85) status = 'critical';
                else if (value >= 70) status = 'warning';
            } else if (type === 'ram') {
                if (value >= 90) status = 'critical';
                else if (value >= 75) status = 'warning';
            }
            
            statusEl.className = 'metric-status status-' + status;
            statusEl.textContent = status.toUpperCase();
        }

        function updateStatusIndicators() {
            const cpuEl = document.getElementById('cpu-value');
            const ramEl = document.getElementById('ram-value');
            
            if (cpuEl) {
                const cpuValue = parseFloat(cpuEl.textContent);
                if (!isNaN(cpuValue)) {
                    updateStatusIndicator('cpu', cpuValue);
                }
            }
            
            if (ramEl) {
                const ramValue = parseFloat(ramEl.textContent);
                if (!isNaN(ramValue)) {
                    updateStatusIndicator('ram', ramValue);
                }
            }
        }

        function startAutoRefresh() {
            // Refresh current metrics every 30 seconds
            setInterval(updateCurrentMetrics, 30000);
            
            // Refresh chart every 5 minutes
            setInterval(loadMetrics, 300000);
            
            console.log('Auto-refresh started');
        }
    </script>
