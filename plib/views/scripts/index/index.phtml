    <!-- Simple auto-refresh script -->
    <script>
        // Update status indicators on load using configured thresholds
        (function() {
            // Get thresholds from PHP
            const thresholds = {
                cpu: {
                    warning: <?php echo intval($currentConfig['cpu_warning_threshold']); ?>,
                    critical: <?php echo intval($currentConfig['cpu_critical_threshold']); ?>
                },
                ram: {
                    warning: <?php echo intval($currentConfig['ram_warning_threshold']); ?>,
                    critical: <?php echo intval($currentConfig['ram_critical_threshold']); ?>
                }
            };
            
            function updateStatusIndicator(type, value) {
                const statusEl = document.getElementById(type + '-status');
                if (!statusEl) return;
                
                let status = 'normal';
                
                if (thresholds[type]) {
                    if (value >= thresholds[type].critical) {
                        status = 'critical';
                    } else if (value >= thresholds[type].warning) {
                        status = 'warning';
                    }
                }
                
                statusEl.className = 'metric-status status-' + status;
                statusEl.textContent = status.toUpperCase();
            }
            
            const cpuValue = parseFloat(document.getElementById('cpu-value').textContent);
            const ramValue = parseFloat(document.getElementById('ram-value').textContent);
            
            updateStatusIndicator('cpu', cpuValue);
            updateStatusIndicator('ram', ramValue);
            
            // Auto-refresh every 30 seconds
            setTimeout(function() {
                location.reload();
            }, 30000);
        })();
    </script>
